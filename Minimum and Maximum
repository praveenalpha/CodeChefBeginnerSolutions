#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,b,c;
	cin>>T;
	while(T--)
	{
	    int n,min,y;
	    cin>>n;
	    int a[n];
	    for(int i=0;i<n;i++)
	         cin>>a[i];
	    min=a[0];
	    for(int i=0;i<n;i++)
	    {
	        if(a[i]<min)
	           min=a[i];
	    }
	    y=min*(n-1);
	    cout<<y<<endl;
	}
	return 0;
}
