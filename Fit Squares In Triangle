#include <iostream>
using namespace std;

int main() {
	int t;
    cin >> t;

    for(int i = 0; i < t; i++) {
        int b;
        cin >> b;
        int m = b/2;
        int ans;

        if(b == 0 || b==1 || b==2 || b==3) {
            ans = 0;
        }
        else

            ans = (m*(m-1))/2;

        cout << ans << endl;

    }
	return 0;
}
