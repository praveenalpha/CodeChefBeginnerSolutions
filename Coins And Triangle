#include<iostream>
using namespace std;

int main()
{
    int t;
    cin>>t;

    while(t--)
    {
     long long int n;
     cin>>n;
     long int sum=0;
        long int i=0;

     for(i=1;i<=n;i++)
     {
        sum+=i;

        if(sum>=n)
            break;
     }

     if(sum>n)
        i--;

     cout<<i<<endl;

    }



}
