#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n,s,j,count=0;
        cin>>n;
        while(n--)
        {
            cin>>s>>j;
            if(abs(j-s)>5)
            {
                count++;
            }
        }
        cout<<count<<endl;
        
    }
    return 0;
}
